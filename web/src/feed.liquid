---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<rss xmlns:atom="http://www.w3.org/2005/Atom" version="2.0">
	<channel>
		<title>Recopilador de contenidos curados | iyaki</title>
		<description>Artículos que me resultan útiles o interesantes</description>
		<link>{{ site.url }}/</link>
		<language>es</language>
		<atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
		<image>
			<url>{{ site.url }}/images/logo.png</url>
			<title>Recopilador de contenidos curados | iyaki</title>
			<link>{{ site.url }}/</link>
		</image>
		{% assign articles = collections.curatedContent | reverse | slice: 0, 20 %}
		{% for article in articles %}
			<item>
				<title><![CDATA[{{ article.data.title }}]]></title>
				<description><![CDATA[{{ article.data.comment }}]]></description>
				<pubDate>{{ article.page.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
				<link>{{ article.data.link }}</link>
				<guid isPermaLink="true">{{ article.data.link }}</guid>
			</item>
		{% endfor %}
	</channel>
</rss>
